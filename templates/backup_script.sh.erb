#!/bin/sh

TIMESTAMP=`date +%Y-%m-%d`

mysqldump -h <%= node['lampp_platform']['database']['host'] %>  -u <%= node['lampp_platform']['database']['user_name'] %> -p '<%= @db_password %>' <%= node['lampp_platform']['database']['db_name'] %> -c > '<%= node['lampp_platform']['database']['backup']['directory'] %>/backup_${TIMESTAMP}.sql'

cp '<%= node['lampp_platform']['database']['backup']['directory'] %>/backup_${TIMESTAMP}.sql' '<%= node['lampp_platform']['database']['backup']['directory'] %>/backup_latest.sql'

<% if node['lampp_platform']['database']['backup_to_s3'] -%>
# Copy both files to S3
aws s3 cp '<%= node['lampp_platform']['database']['backup']['directory'] %>/backup_${TIMESTAMP}.sql'
aws s3 cp '<%= node['lampp_platform']['database']['backup']['directory'] %>/backup_latest.sql'
<% end -%>
